#!groovy
//Одновременно запустится только 1 билд
properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'master'
        }
    triggers { pollSCM('*/2 * * * *') }    
        options{
            buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
            timestamps()
        }
    stages {
            stage("nalichie") {
                    steps {
                        sh 'ls -la /home/maks'
                    }
            }
            stage("perehod") {
                    steps {
                        sh 'cd /home/maks/app'
                    }
                     
            }
            stage("create image php-fpm") {
                   steps {
                       echo "=============START====================="
                       dir ('docker/php-fpm') {
                               sh 'docker build .'
                       } 
                   }
            }
    }    
} 
 
