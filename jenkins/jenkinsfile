#!groovy
//Одновременно запустится только 1 билд
properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'master'
        }
    triggers { 
     pollSCM('*/2 * * * *') 
     }    
        options{
            buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
            timestamps()
        }
    stages {
            stage("nalichie") {
                    steps {
                        sh 'ls -la /home/maks'
                    }
            }
            stage("perehod") {
                    steps {
                        sh 'cd /home/maks/app'
                    }
                     
            }
            stage("Docker Login") {
                    steps {
                        echo "=============Docker Login============="
                        withDockerRegistry([ credentialsId: 'dockerhub_maks', url: '']) { 
                        //docker.withRegistry(['https://registry.hub.docker.com', 'dockerhub_maks'])
                        //withCredentials([usernamePassword(credentialsId: 'dockerhub_maks')])
                             sh 'docker login'}
                    }
            }
            stage("create image php-fpm") {
                   steps {
                       echo "=============START====================="
                       dir ('docker/php-fpm') {
                               sh 'docker build -t php-fpm7.3:v1 .'
                       } 
                   }
            }
    }    
} 
 
